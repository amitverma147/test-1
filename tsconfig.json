{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "strict": false,
    "allowJs": true,
    "checkJs": false
  },
  "include": [
    "scripts/**/*",
    "api/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/supabase/functions/**",
    "src/supabase/functions/server/**"
  ]
}